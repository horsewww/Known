@inject UIService AntUI

<KContext Value="context">
    <Router AppAssembly="typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(AntLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <Result Status="404" />
        </NotFound>
    </Router>
    <AntContainer />
</KContext>

@code {
    private Context context;

    protected override void OnInitialized()
    {
        context = new Context(AntUI);
        base.OnInitialized();
    }
}