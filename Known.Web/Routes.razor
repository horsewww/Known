@using AntDesign
@using Known.AntBlazor
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@inject UIService AntUI

<CascadingAuthenticationState>
    <CascadingValue Value="context">
        <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@Config.Assemblies">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(AntLayout)">
                    <Authorizing></Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <Result Status="404" />
            </NotFound>
        </Router>
        <AntContainer />
    </CascadingValue>
</CascadingAuthenticationState>

@code {
    private Context context;

    protected override void OnInitialized()
    {
        context = new Context(AntUI);
        base.OnInitialized();
    }
}