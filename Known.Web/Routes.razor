@using AntDesign
@using Known.AntBlazor
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@inherits Known.Blazor.BaseComponent

<CascadingAuthenticationState>
    <CascadingValue Value="Context">
        <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@Config.Assemblies">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(AntLayout)">
                    <Authorizing></Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <Result Status="404" />
            </NotFound>
        </Router>
        <AntContainer />
    </CascadingValue>
</CascadingAuthenticationState>

@code {
    [Inject] private UIService AntUI { get; set; }

    protected override void OnInitialized()
    {
        Context = new Context(AntUI);
        base.OnInitialized();
    }
}