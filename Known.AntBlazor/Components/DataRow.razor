@inherits BaseComponent
@typeparam TItem where TItem : class, new()

@if (Row != null)
{
    var colSpan = 24 / Row.Fields.Count;
    <AntRow>
        @foreach (var field in Row.Fields)
        {
            var column = field.Column;
            var label = Language?.GetString<TItem>(column);
            <DataItem Span="colSpan" Label="@label" Required="column.Required" Rules="field.ToRules(Context)">
                <KField Model="field" />
            </DataItem>
        }
    </AntRow>
}

@code {
    [Parameter] public FormRow<TItem> Row { get; set; }
}