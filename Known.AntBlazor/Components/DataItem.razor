@inherits BaseComponent
@typeparam TItem where TItem : class, new()

<GridCol Span="Span">
    <FormItem LabelColSpan="LabelSpan" Label="@Label" Required="Model.Column.Required" Rules="Model.ToRules(Context)">
        <InputField Model="Model" />
    </FormItem>
</GridCol>

@code {
    private string Label => Language?.GetString<TItem>(Model.Column);
    private int LabelSpan => Model?.Form?.LabelSpan ?? GetLabelSpan(Span);

    [Parameter] public int Span { get; set; }
    [Parameter] public FieldModel<TItem> Model { get; set; }

    private int GetLabelSpan(int colSpan)
    {
        if (colSpan == 24)
            return 4;
        else if (colSpan == 12)
            return 8;
        return 0;
    }
}