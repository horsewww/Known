@using AntDesign
@using Known.Blazor
@using Microsoft.AspNetCore.Components.Routing
@inject UIService AntUI

<KContext Value="context">
    <Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="Config.Assemblies">
        <Found Context="routeData">
            <KRouteData Value="routeData">
                <RouteView RouteData="routeData" DefaultLayout="typeof(AntLayout)" />
            </KRouteData>
        </Found>
        <NotFound>
            <Result Status="404" />
        </NotFound>
    </Router>
    <AntContainer />
</KContext>

@code {
    private UIContext context;

    [Parameter] public string IPAddress { get; set; }
    [Parameter] public bool IsMobile { get; set; }

    protected override void OnInitialized()
    {
        context = new UIContext(AntUI);
        context.IPAddress = IPAddress;
        context.IsMobile = IsMobile;
        base.OnInitialized();
    }
}