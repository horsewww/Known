@inherits IndexPage

<CascadingValue Value="this">
    @if (IsLoaded)
    {
        @if (!Context.Install.IsInstalled)
        {
            <Known.Blazor.InstallPage OnInstall="OnInstall" />
        }
        else if (!IsLogin)
        {
            <Known.Demo.Pages.Login OnLogin="OnLogin" />
        }
        else if (UIType == "AntDesign")
        {
            <Known.AntBlazor.Pages.Admin OnLogout="OnLogout" />
        }
        else
        {
            <Known.Blazor.Pages.Admin OnLogout="OnLogout" />
        }
    }
</CascadingValue>

